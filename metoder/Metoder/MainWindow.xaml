<Window x:Class="Metoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Metoder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <WrapPanel Margin=" 0 80 0 0" HorizontalAlignment="Center" >
                <TextBlock Margin="0 0 100 0" Text="Tal 1"/>
                <TextBlock Text="Tal 2"/>
            </WrapPanel>
            <WrapPanel Margin=" 0 30 0 0" HorizontalAlignment="Center" >
                <TextBox x:Name="tbxtal1" Margin=" 0 0 30 0" Padding="25 5 25 5"/>
                <TextBox x:Name="tbxtal2" Margin=" 30 0 0 0"  Padding="25 5 25 5"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center">
            <Button x:Name="btnadd" Margin="0 50 50 0" Width="150" Click="btnadd_Click">Addition</Button>
            <Button Name="btnmult" Margin="0 50 50 0" Width="150" Click="btnmult_Click">multiplikation</Button>
                <Button Name="btnsub" Margin="0 50 50 0" Width="150" Click="btnsub_Click">subtrahera</Button>
                <Button Name="btndub" Margin="0 50 0 0" Width="150" Click="btndub_Click" >addera och dubbla</Button>
            </WrapPanel>
            <TextBlock HorizontalAlignment="Center" Width="Auto" Margin="0 50 0 0" x:Name="Summa"/>
        </StackPanel>
    </Grid>
</Window>
