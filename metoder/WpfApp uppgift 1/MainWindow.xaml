<Window x:Class="WpfApp_uppgift_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_uppgift_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <WrapPanel Margin="0 50 0 0" HorizontalAlignment="Center" >
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" Text="år"/>
                <TextBox Name="tbxår" Width="150" Margin="0 70 0 0"></TextBox>
                <Button Name="btnärdet" Width="150" Margin="0 30 0 0" Click="ärdet_Click">Är det skottår</Button>
                <TextBlock Name="tblresultat" Width="150" Margin="0 30 0 0"></TextBlock>
            </StackPanel>
            <StackPanel Width="100"/>
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" Text="månad"/>
                <TextBox Name="tbxmånad" Width="150" Margin="0 70 0 0"></TextBox>
                <Button Name="btnhurmånga" Width="150" Margin="0 30 0 0" Click="ärdet_Click">hur många dagar</Button>
                <TextBlock Name="tblantaldagar" Width="150" Margin="0 30 0 0"></TextBlock>
            </StackPanel>
        </WrapPanel>
    </Grid>
</Window>
